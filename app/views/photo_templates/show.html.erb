<h1>Photo Details</h1>


<dt>Image</dt>
<dd><img src="<%=@photo.image%>" width=100></dd>
<dt>Caption</dt>
<dd><%= @photo.caption %></dd>
<dt>Owner</dt>
<dd><%= @photo.poster.username %></dd>
<dt>Posted</dt>
<dd><%= @photo.created_at %></dd>
<dt>Edit photo</dt>
<dd>
  <form method=post action="/photos/<%=@photo.id%>/edit">
    <label for="image_field">Image</label>
    <input type="text" id="image_field" name="image_input" value="<%=@photo.image%>">
    <label for="caption_field">Caption</label>
    <textarea id="caption_field" name="caption_input"><%=@photo.caption%></textarea>
    <button type="submit">Update photo</button>
  </form>
</dd>
<dt>Delete photo</dt>
<dd><a href="/delete_photo/<%=@photo.id%>">Delete this photo</a></dd>

<h2>Comments</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <tr>
  <% @photo.comments.each do |a_comment| %>
    <tr>
      <td><%= a_comment.commenter.username %></td>
      <td><%= a_comment.body %></td>
      <td><%= a_comment.created_at %></td>
    </tr>
  <% end %>
</table>

<h3>Add a new comment</h3>

<form method="post" action="/photos/<%=@photo.id%>/new_comment">
  <label for="photo_id_field">Photo ID</label>
  <input type="text" id="photo_id_field" name="photo_id_input" value="<%=@photo.id%>">
  <label for="commenter_id_field">Author ID</label>
  <input type="text" id="commenter_id_field" name="commenter_id_input" placeholder="Enter your author ID">
  <label for="comment_field">Comment</label>
  <textarea id="comment_field" name="comment_input" placeholder="Enter a comment..."></textarea>
  <button type="submit">Add comment</button>
</form>
